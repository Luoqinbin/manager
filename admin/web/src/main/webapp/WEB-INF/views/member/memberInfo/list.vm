<body>
<input type="hidden" id="csrfName" value="${_csrf.parameterName}"/>
<input type="hidden" id="csrfToken" value="${_csrf.token}"/>
<input type="hidden" id="menuId" value="${menuId}"/>
<div class="portlet box grey-cascade" style="width: 99%">
    <div class="portlet-title">
        <div class="caption">
            <i class="fa fa-gift"></i>查询条件
        </div>
        <div class="tools">
        </div>
    </div>
    <div class="portlet-body form">
        <br>
        <form class="form-horizontal">
            <div class="col-sm-3">
                <label class="control-label col-md-3">手机：</label>
                <div class="input-group">
                    <input class="form-control" placeholder="请输入手机号" name="phone" id="phoneQuery" type="text" autofocus>
                </div>
            </div>
            <div class="col-sm-3">
                <label class="control-label col-md-3">卡号：</label>
                <div class="input-group">
                    <input class="form-control" placeholder="请输入卡号" name="number" id="numberQuery" type="text">
                </div>
            </div>
            <div class="col-sm-3">
                <label class="control-label col-md-3">类型：</label>
                <div class="input-group">
                    <select class="select form-control" style="width: 150px" id="typeQuery" name="type">
                        <option value=""></option>
                        #foreach($item in $list)
                            <option value="$item.id">$item.name</option>
                        #end
                    </select>
                </div>
            </div>
            <button type="button" id="query" class="btn btn-primary"><i class="glyphicon glyphicon-search"></i>查询
            </button>
        </form>
        <br/>
    </div>
</div>
<!-- BEGIN EXAMPLE TABLE PORTLET-->
<div class="portlet box grey-cascade" style="width: 99%">
    <div class="portlet-title">
        <div class="caption">
            <i class="fa fa-globe"></i>列表
        </div>
        <div class="tools">
        </div>
    </div>
    <div class="portlet-body" style="font-size: 14px">
        <div class="table-toolbar">
            <div class="row">
                <div class="col-md-6">
                    ${addBtn}
                    ${listBtn}
                </div>
            </div>
        </div>
        <table class="table table-striped table-bordered table-hover" id="dataTables">
            <thead>
            <tr>
                <th>序号</th>
                <th>储值卡卡号</th>
                <th>储值卡类型</th>
                <th>手机</th>
                <th>姓名</th>
                <th>办卡时间</th>
                <th>到期日</th>
                <th>卡额</th>
                <th>余额</th>
                <th>是否绑定微信</th>
                <th>备注</th>
            </tr>
            </thead>
            <tbody></tbody>
        </table>
    </div>
</div>
<!-- END EXAMPLE TABLE PORTLET-->

<div id="addWin" style="display: none;width: 99%" class="portlet-body form">
    <form role="form" action="memberInfo/addOrUpdate" method="post" id="form" class="form-horizontal form-validate">
        <input type="hidden" value="${_csrf.token}" name="${_csrf.parameterName}">
        <input type="hidden" value="" name="id" id="userId">
        <div class="form-body">
            <div class="form-group">
                <label class="control-label col-md-3">储值卡卡号：
                </label>
                <div class="col-md-8">
                    <input type="text" class="form-control" data-required="1" readonly id="number" name="number"
                           placeholder="储值卡卡号">
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-md-3">卡类型：<span class="required">* </span>
                </label>
                <div class="col-md-8">
                    <select class="select form-control" style="width: 150px" id="type" name="type">
                        <option value="">请选择</option>
                        #foreach($item in $list)
                            <option value="$item.id">$item.name</option>
                        #end
                    </select>
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-md-3">卡额：<span class="required">* </span>
                </label>
                <div class="col-md-8">
                    <input class="form-control" name="carPrice" readonly id="carPrice" >
                </div>
            </div>


            <div class="form-group">
                <label class="control-label col-md-3">手机号：<span class="required">* </span>
                </label>
                <div class="col-md-8">
                    <input class="form-control" name="phone" id="phone" placeholder="请输入手机号">
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-md-3">姓名：<span class="required">* </span>
                </label>
                <div class="col-md-8">
                    <input class="form-control" name="name" id="name" placeholder="请输入姓名">
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-md-3">支付方式：<span class="required">* </span>
                </label>
                <div class="col-md-8">
                    <select class="form-control" name="payWay" id="payWay" placeholder="请选择">
                        <option value="">请选择</option>
                        <option value="1">现金支付</option>
                        <option value="2">刷卡支付</option>
                        <option value="3">转账-农商行0549</option>
                        <option value="4">转账-中信</option>
                        <option value="5">微信-中信</option>
                        <option value="6">支付宝</option>
                    </select>
                </div>
            </div>
        </div>
    </form>
</div>

<div id="updateWin" style="display: none;width: 99%" class="portlet-body form">
    <form role="form" action="memberInfo/addOrUpdate" method="post" id="updateform" class="form-horizontal form-validate">
        <input type="hidden" value="${_csrf.token}" name="${_csrf.parameterName}">
        <input type="hidden" value="" name="id" id="userId">
        <div class="form-body">
            <div class="form-group">
                <label class="control-label col-md-3">储值卡卡号：
                </label>
                <div class="col-md-8">
                    <input type="text" class="form-control" data-required="1" readonly id="number" name="number"
                           placeholder="储值卡卡号">
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-md-3">卡类型：<span class="required">* </span>
                </label>
                <div class="col-md-8">
                    <select class="form-control" id="typeUpdate" name="type" readonly="true">
                        <option value="">请选择</option>
                        #foreach($item in $list)
                            <option value="$item.id">$item.name</option>
                        #end
                    </select>
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-md-3">卡额：<span class="required">* </span>
                </label>
                <div class="col-md-8">
                    <input class="form-control" name="carPrice" readonly id="carPrice" >
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-3">手机号：<span class="required">* </span>
                </label>
                <div class="col-md-8">
                    <input class="form-control" name="phone" id="phone" placeholder="请输入手机号">
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-md-3">姓名：<span class="required">* </span>
                </label>
                <div class="col-md-8">
                    <input class="form-control" name="name" id="name" placeholder="请输入姓名">
                </div>
            </div>
        </div>
    </form>
</div>
<div id="uploadWin" style="display: none;width: 99%" class="portlet-body form">
    <form role="form" action="memberInfo/importXls" method="post" id="uploadForm" class="form-horizontal form-validate">
        <input type="hidden" value="${_csrf.token}" name="${_csrf.parameterName}">
        <div class="form-group">
            <label class="control-label col-md-3">请选择xls文件：
            </label>
            <div class="col-md-8">
                <input type="file" name="xlsFile" id="xlsFile" >
            </div>
        </div>
    </form>
</div>
